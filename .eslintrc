{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "globals": {
    "require"   : true,
    "fetch"     : true
  },
  "rules" : {
    "react/react-in-jsx-scope": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-equals-spacing": 0,
    "react/jsx-curly-spacing": 0,
    "react/jsx-no-bind": 0,
    "padded-blocks" : 0,
    "space-before-function-paren": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "arrow-parens": 0
  }
}
